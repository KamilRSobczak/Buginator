<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

    <defaultCache eternal="true" maxElementsInMemory="400" overflowToDisk="false" />

    <cache name="permissions" maxElementsInMemory="50" eternal="true" overflowToDisk="false"/>
    <cache name="roles" maxElementsInMemory="500" eternal="true" overflowToDisk="false"/>
    <cache name="users" maxElementsInMemory="1000" eternal="true" overflowToDisk="false"/>
    <cache name="applications" maxElementsInMemory="5000" eternal="true" overflowToDisk="false"/>
</ehcache>